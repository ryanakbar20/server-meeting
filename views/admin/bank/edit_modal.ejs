<!-- Modal -->
<div
  class="modal fade"
  id="edit-modal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Update New Bank</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="/admin/bank?_method=PUT" method="POST" enctype="multipart/form-data">
      <div class="modal-body">
          <div class="form-group">
          
            <label for="nameBank">Name Bank</label>
            <input
              required
              type="text"
              class="form-control nameBank"
              id="nameBank"
              name="nameBank"
              placeholder="Enter Bank"
            />
            <label class="mt-2" for="nomorRekening">No Rekening</label>
            <input
              required
              type="text"
              class="form-control nomorRekening"
              id="nomorRekening"
              name="nomorRekening"
              placeholder="Enter Rekening"
            />
            <label class="mt-2" for="name">Name</label>
            <input
              required
              type="text"
              class="form-control name"
              id="name"
              name="name"
              placeholder="Enter Name"
            />
            <label class="mt-2" for="bank">Image</label>
            <input
              type="file"
              class="form-control"
              id="image"
              name="image"
              placeholder="Enter Image"
            />
          </div>
        </div>
        <div class="modal-footer">
          <input name="id" class="id"/>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">
                Close
            </button>
            <button type="submit" class="btn btn-primary">Save changes</button>
        </form>
      </div>
    </div>
  </div>
</div>
