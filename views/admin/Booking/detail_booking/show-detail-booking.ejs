<div class="card shadow mb-4">
  <div class="card-header py-3">
    <a href="/admin/booking" class="btn btn-warning">
      Back
    </a>
  </div>
  <div class="row">
    <div class="col-4">
      <div class="card shadow p-3">
        <img
          src="https://server-node-staycation.herokuapp.com/<%= booking.payments.proofPayment %>"
          alt="bukti"
          width="100%"
        />
      </div>
      <% if (booking.payments.status == "Proses") { %>
      <div class="row m-3">
        <div class="col">
          <form
            action="/admin/booking/<%= booking.id %>/reject?_method=PUT"
            method="POST"
          >
            <button type="submit" href="#" class="btn btn-danger">
              <i class="fas fa-times"></i> Reject
            </button>
          </form>
        </div>
        <div class="col">
          <form
            action="/admin/booking/<%= booking.id %>/accept?_method=PUT"
            method="POST"
          >
            <button type="submit" class="btn btn-success">
              <i class="fas fa-check"></i> Accept
            </button>
          </form>
        </div>
      </div>
      <% } %>
    </div>
    <div class="col-8">
      <%- include('tables.ejs') %>
    </div>
  </div>
</div>
