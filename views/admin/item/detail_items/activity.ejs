<div
  class="tab-pane fade"
  id="activity"
  role="tabpanel"
  aria-labelledby="profile-tab"
>
  <div class="row">
    <div class="col-5">
      <form
        action="/admin/item/add/activity"
        method="POST"
        enctype="multipart/form-data"
      >
        <input type="hidden" name="itemId" value="<%= itemId %>" />
        <div class="form-group">
          <label>Name</label>
          <input
            required
            name="name"
            type="text"
            class="form-control"
            aria-describedby="emailHelp"
            placeholder="Enter name"
          />
        </div>
        <div class="form-group">
          <label>Type</label>
          <input
            required
            name="type"
            type="text"
            class="form-control"
            aria-describedby="emailHelp"
            placeholder="Enter type"
          />
        </div>
        <div class="form-group">
          <label>Image</label>
          <input class="form-control" type="file" name="image" required />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
    <div class="col-7">
      <!-- DataTales Example -->
      <div class="card shadow mb-4">
        <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary">DataTables Item</h6>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table
              class="table table-bordered"
              id="dataTableActivity"
              width="100%"
              cellspacing="0"
            >
              <thead>
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>Type</th>
                  <th>Image</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% for (let i = 0; i < activity.length; i++) { %>
                <tr>
                  <td><%= i + 1 %></td>
                  <td><%= activity[i].name %></td>
                  <td><%= activity[i].type %></td>
                  <td>
                    <img
                      src="https://server-node-staycation.herokuapp.com/<%= activity[i].imageUrl %>"
                      alt="image"
                      width="70px"
                    />
                  </td>
                  <td>
                    <form
                      action="/admin/item/<%= itemId %>/activity/<%= activity[i].id %>?_method=DELETE"
                      method="POST"
                      enctype="multipart/form-data"
                    >
                      <a
                        href="javascript:void()"
                        type="button"
                        class="btn btn-warning btn-circle btn-sm button-update"
                        data-id="<%= activity[i].id %>"
                        data-name="<%= activity[i].name %>"
                        data-type="<%= activity[i].type %>"
                        ><i class="fas fa-edit"></i
                      ></a>
                      <button
                        class="btn btn-danger btn-circle btn-sm"
                        type="submit"
                      >
                        <i class="fas fa-trash"></i>
                      </button>
                    </form>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
