<div
  class="tab-pane fade show active"
  id="add-item"
  role="tabpanel"
  aria-labelledby="add-item"
>
  <form
    action="/admin/item/<%= item.id %>?_method=PUT"
    method="POST"
    enctype="multipart/form-data"
  >
    <div class="form-group">
      <label>Title</label>
      <input
        required
        value="<%= item.title %>"
        name="title"
        type="text"
        class="form-control"
        aria-describedby="emailHelp"
        placeholder="Enter Title"
      />
    </div>
    <div class="form-group">
      <label>Price</label>
      <input
        required
        value="<%= item.price %>"
        name="price"
        type="number"
        class="form-control"
        aria-describedby="emailHelp"
        placeholder="Enter Price"
      />
    </div>
    <div class="form-group">
      <label>City</label>
      <input
        required
        value="<%= item.city %>"
        name="city"
        type="text"
        class="form-control"
        aria-describedby="emailHelp"
        placeholder="Enter City"
      />
    </div>
    <div class="form-group">
      <label>Category</label>
      <select class="form-control" name="categoryId">
        <option value="<%= item.categoryId[0].id %>"
          >--<%= item.categoryId[0].name %>--</option
        >
        <% for (let i = 0; i < category.length; i++) { %>
        <option value="<%= category[i].id %>"><%= category[i].name %></option>
        <% } %>
      </select>
    </div>
    <div class="form-group">
      <label>Image</label>
      <input class="form-control" type="file" name="image" multiple />
    </div>
    <div class="form-group">
      <label>Description</label>
      <textarea name="about" class="form-control">
        <%= item.description %></textarea
      >
    </div>
    <a href="/admin/item" class="btn btn-warning">Back</a>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
